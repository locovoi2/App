<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:padding="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/foto_trainer"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/persona_con_barra"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/trainer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TrainerName"
            android:textStyle="bold"
            android:textSize="35sp"
            android:layout_toEndOf="@+id/foto_trainer"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/trainer_mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TrainerMail"
            android:textSize="20sp"
            android:layout_toEndOf="@+id/foto_trainer"
            android:layout_below="@+id/trainer_name"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp" />

        <ImageView
            android:id="@+id/info_icon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            app:srcCompat="@drawable/informacion" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
